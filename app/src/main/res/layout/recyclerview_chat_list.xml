<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lc_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alwaysDrawnWithCache="true"
    app:cardBackgroundColor="#00000000"
    android:background="#00000000"
    android:layout_centerHorizontal="true"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rya_relativeLayout"
        android:background="#00000000"
        xmlns:app="http://schemas.android.com/tools"
        >

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/lc_profile_image"
            android:background="@drawable/ic_square_default_profile_picture"
            android:contentDescription="saADSA" />

        <ImageView
            android:id="@+id/lc_color_bar"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:background="@color/appColor"
            android:layout_toEndOf="@id/lc_profile_image"
            />

        <TextView
            android:id="@+id/lc_profileName"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/lc_color_bar"
            android:layout_alignTop="@id/lc_profile_image"
            android:layout_marginTop="7dp"
            android:layout_marginStart="@dimen/space16"
            android:hint="@string/NameplaceHolder"
            android:textColorHint="@color/black90"
            android:textColor="@color/black"
            />



    </RelativeLayout>

</android.support.v7.widget.CardView>
