<resources>

    <!-- Base application theme. -->
    <style name="MyCustomAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/appColor</item>
        <item name="colorAccent">@color/appColor</item>
    </style>

    <style name="MobileLoginTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black90</item>
        <item name="colorAccent">@color/black90</item>
    </style>

    <!--text style medium-->
    <style name="MyCustomTextStyle" parent="@android:style/Theme.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">ubuntu.ttf</item>
    </style>

</resources>
